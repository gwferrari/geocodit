[]  a kees:SparqlIngestion ;
	kees:queryName <urn:istat:province> ;
	kees:sparqlEndpoint <http://datiopen.istat.it/sparql/oracle>  ;
	kees:constructQuery """
	    PREFIX ter: <http://datiopen.istat.it/odi/ontologia/territorio/>
	    CONSTRUCT {      
